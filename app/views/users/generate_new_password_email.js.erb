<% if current_user.errors.blank? %>
  $('.flash').html("<%= j render('shared/flashages', notice: "Reset password instructions have been sent to #{current_user.email}.") %>");
<% else %>
    $('.flash').html("<%= j render('shared/flashages', alert: "Could not be sent reset password email to #{current_user.email}") %>");
<% end %>
$('#modal .modal').modal('hide');

