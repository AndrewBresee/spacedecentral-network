- likable_params = { likable_id: likable.id, likable_type: likable.class.name }
- if user_signed_in? && likable.likes.pluck(:user_id).include?(current_user.id)
  = link_to inline_svg('like_fill.svg', class: 'like-img like-fill-img'),
    likes_path(likable_params), method: :post, remote: true
  = link_to inline_svg('like_outline.svg', class: 'like-img like-hidden'),
    likes_path(likable_params), method: :post, remote: true
- else
  = link_to inline_svg('like_fill.svg', class: 'like-img like-fill-img like-hidden'),
    likes_path(likable_params), method: :post, remote: true
  = link_to inline_svg('like_outline.svg', class: 'like-img'),
    likes_path(likable_params), method: :post, remote: true
%span.like-size{id: "lsize#{likable.id}" }
  = likable.likes_count || 0
