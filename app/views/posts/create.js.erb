<% if @post.errors.present? %>
  $('#modal .modal-body').html("<%= j render('posts/form', remote: true) %>");
<% else %>
  $(".post-list").prepend("<%= j render('posts/post', post: @post, request_from: params[:request_from].to_s) %>");
  $('#modal .modal').modal('hide');
  $('.flash').html("<%= j render('shared/flashages', notice: 'Post was successfully created.')%>");

  if ($('.nodata').length > 0) {
    $('.nodata').remove();
  }
<% end %>
