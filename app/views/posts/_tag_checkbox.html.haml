- current_tag_id ||= nil
%hr
%h4.text-uppercase tags
%ul.list-tags
  = render partial: 'tags/tag',
    collection: tags[0..9],
    as: :tag,
    locals: { current_tag_id: current_tag_id }

  - if tags.count > 9
    .more-tags.hidden
      = render partial: 'tags/tag',
        collection: tags[10..-1],
        as: :tag,
        locals: { current_tag_id: current_tag_id }

    %li
      = link_to '#', class: 'btn show-more-btn js-show-more-tags' do
        %span.less-icon.hidden= inline_svg('minus-blue.svg')
        %span.more-icon= inline_svg('plus-blue.svg')
        %span.btn-text show more

