<% if @message[:type].to_s == 'notice' %>
  $(".flash").html("<%= j render('shared/flashages', notice: @message[:message]) %>");
<% else %>
  $(".flash").html("<%= j render('shared/flashages', alert: @message[:message]) %>");
<% end %>

<% if @notifications.present? %>
  $('#nav_notifications_list').html("<%= j render(partial: 'shared/notification', collection: @notifications, as: :notification) %>");
<% end %>

<% if @notifications_unread.present? %>
  $('notfications_unread_badge').html("<%= @notifications_unread %>");
<% end %>
